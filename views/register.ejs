<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="./icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/search.css' rel='stylesheet'>
    <link rel="stylesheet" href="styles/register.css">
    <title>Register Page</title>
</head>
<body>
<div class="wrapper">
    <a class="home-link" href="/">Odaplace</a>
    <form
            class="form"
            action="/auth/register"
            method="post"
    >
        <h4>Register</h4>
        <% if (typeof userError !== "undefined" && userError.user) { %>
               <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" class="alert-icon bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                    <div>
                       <%= userError.user.msg %>
                    </div>
                </div>
        <% } %>

        <% if (typeof err !== "undefined" && err.email) { %>
            <div class="form-floating my-3 has-validation">
                <input type="email" class="form-control is-invalid" id="floatingInput" placeholder="name@example.com" name="email">
                <label for="floatingInput">Email address</label>
                <% if (typeof err !== "undefined" && err.email) { %>
                    <div id="validationServerUsernameFeedback" class="invalid-feedback d-block">
                        <%= err.email.msg %>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="form-floating my-3 has-validation">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                <label for="floatingInput">Email address</label>
            </div>
        <% } %>

        <% if (typeof err !== "undefined" && err.password) { %>
            <div class="form-floating my-3 has-validation">
                <input type="password" class="form-control is-invalid" id="floatingPassword" placeholder="Password" name="password">
                <label for="floatingPassword">Password</label>
                <% if (typeof err !== "undefined" && err.password) { %>
                    <div id="validationServerUsernameFeedback" class="invalid-feedback d-block">
                        <%= err.password.msg %>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="form-floating my-3 has-validation">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
                <label for="floatingPassword">Password</label>
            </div>
        <% } %>

        <button class="btn btn-primary" type="submit">
            Register
        </button>
        <a
                class="login-link"
                href="/auth/login"
        >
            Have an account?
        </a>
    </form>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>